<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background2">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_view"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="35dp"
            android:textColor="@color/White"
            android:textSize="25sp"
            android:textAlignment="center"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_marginTop="35dp"
            android:textColor="@color/Blue"
            android:textSize="20sp"
            android:textAlignment="center"
            android:text="Connect to a Business"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:fontFamily="@font/aquirebold"/>
        <Button
            android:id="@+id/btn_qr"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:textColor="@color/White"
            android:background="@color/colorPrimaryDark"
            android:text="Scan QR Code to Connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aquire"/>
        <TextView
            android:layout_marginTop="35dp"
            android:textColor="@color/Blue"
            android:textSize="10sp"
            android:textAlignment="center"
            android:text="Enter Postal Code Below"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:fontFamily="@font/aquire"/>
        <EditText
            android:id="@+id/search_postalCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/postalCode"
            android:autofillHints=""
            android:inputType="text"/>
        <Button
            android:id="@+id/btn_postal"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:textColor="@color/White"
            android:background="@color/colorPrimaryDark"
            android:text="Connect by Postal Code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aquire"/>
        <TextView
            android:layout_marginTop="35dp"
            android:textColor="@color/Blue"
            android:textSize="10sp"
            android:textAlignment="center"
            android:text="Enter Phone Number Below"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:fontFamily="@font/aquire"/>
        <EditText
            android:id="@+id/search_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/postalCode"
            android:autofillHints=""
            android:inputType="text"/>
        <Button
            android:id="@+id/btn_phone"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:textColor="@color/White"
            android:background="@color/colorPrimaryDark"
            android:text="Connect by Phone Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aquire"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </LinearLayout>

</RelativeLayout>