<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2">


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_view"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="COVID-19 Screening Questions"
            android:textColor="#303F9F"
            android:textSize="23sp"
            android:textStyle="bold"
            android:fontFamily="@font/aquirebold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are you feeling sick?\n(Examples include a new cough, headache, weakness, fever, difficulty breathing, etc.)"
                android:textColor="#303F9F"
                android:textSize="12sp"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/aquire"/>
            <LinearLayout
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/symptomsCheckYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:padding="10dp"
                    android:text="Yes"
                    android:gravity="center"
                    android:textColor="#303F9F"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/aquire"/>

                <CheckBox
                    android:id="@+id/symptomsCheckNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:padding="10dp"
                    android:gravity="center"
                    android:text="No"
                    android:textColor="#303F9F"
                    android:textSize="12sp"
                    android:textStyle="bold"
                android:fontFamily="@font/aquire"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Did you provide care or have close contact with a person with COVID-19\n(probable or confirmed) while they were ill and you did not have appropriate PPE?"
                android:textColor="#303F9F"
                android:gravity="center"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="@font/aquire"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/contactCheckYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:padding="10dp"
                    android:text="Yes"
                    android:gravity="center"
                    android:textColor="#303F9F"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/aquire"/>

                <CheckBox
                    android:id="@+id/contactCheckNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:padding="10dp"
                    android:text="No"
                    android:gravity="center"
                    android:textColor="#303F9F"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/aquire"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Have you travelled outside Canada in the past 14 days? "
                android:textColor="#303F9F"
                android:gravity="center"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="@font/aquire"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/travelCheckYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:padding="10dp"
                    android:text="Yes"
                    android:gravity="center"
                    android:textColor="#303F9F"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/aquire"/>

                <CheckBox
                    android:id="@+id/travelCheckNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:padding="10dp"
                    android:text="No"
                    android:textColor="#303F9F"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/aquire"/>
            </LinearLayout>
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/White"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/aquire"/>
    </LinearLayout>

</RelativeLayout>